<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <services>
        <service id="acme.store.admin.post" class="Acme\StoreBundle\Admin\PostAdmin">
            <tag name="sonata.admin" manager_type="orm" group="sonata_blog" label="post"/>
            <argument/>
            <argument>Acme\StoreBundle\Entity\Post</argument>
            <argument>AcmeStoreBundle:PostAdmin</argument>
        </service>
        <service id="acme.store.admin.tag" class="Acme\StoreBundle\Admin\TagAdmin">
            <tag name="sonata.admin" manager_type="orm" group="sonata_blog" label="tag"/>
            <argument/>
            <argument>Acme\StoreBundle\Entity\Tag</argument>
            <argument>AcmeStoreBundle:TagAdmin</argument>
        </service>
        <service id="acme.store.admin.comment" class="Acme\StoreBundle\Admin\CommentAdmin">
            <tag name="sonata.admin" manager_type="orm" group="sonata_blog" label="comment"/>
            <argument/>
            <argument>Acme\StoreBundle\Entity\Comment</argument>
            <argument>AcmeStoreBundle:CommentAdmin</argument>
        </service>
    </services>

