{% extends "SandboxMainBundle::skeleton.html.twig" %}

{% block content %}
<div xmlns:sioc="http://rdfs.org/sioc/ns#"
     xmlns:dcterms="http://purl.org/dc/terms/"
     typeof="sioc:Post"
     about="{{ page.path }}"
     class="articleContainer">
     {# hide this if no permission to edit #}
     <div class="hiddenfieldsContainer">
         <div class="hiddenfieldsToggle"></div>
         <div class="hiddenfields">
            <div class="hiddenfieldsCloseButton"></div>
            <h2>Article settings</h2>
         </div>
         <div class="hiddenfieldsCloseCorner"></div>
     </div>
    {# end hide this if no permission to edit #}
    <h1 property="dcterms:title">{{ page.title }}</h1>
    <div property="sioc:content">
        {{ page.content|raw }}
    </div>
</div>
{{ parent() }}
{% endblock %}

{% block content_extra %}
<h3 class="offset">Child pages</h3>
{% render "symfony_cmf_navigation.renderer:childlistAction" with { 'url': url } %}
{% endblock %}
