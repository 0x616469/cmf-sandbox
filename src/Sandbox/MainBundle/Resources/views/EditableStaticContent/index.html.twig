{% extends "SandboxMainBundle::skeleton.html.twig" %}

{% block content %}
<div xmlns:sioc="http://rdfs.org/sioc/ns#" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:dcterms="http://purl.org/dc/terms/"
     typeof="sioc:Post"
     about="{{ page.path }}"
     class="articleContainer">

     {% if is_granted("IS_AUTHENTICATED_ANONYMOUSLY") %}
         <div class="hiddenfieldsContainer">
             <div class="hiddenfieldsToggle"></div>
             <div class="hiddenfields">
                <div class="hiddenfieldsCloseButton"></div>
                <h2>Article settings</h2>
                
                <div id="articleTagsWrapper">
                    <form>
                        <div class="articleTags">
                            <h3>Article tags</h3>
                            <input id="articleTags" type="text" class="tags" value="" />
                        </div>
                        <div class="articleSuggestedTags">
                            <h3>Suggested tags</h3>
                            <input id="suggestedTags" type="text" class="tags" value="foo,bar,baz,roffle" />
                        </div>
                    </form>
                    
                </div>
             </div>
             <div class="hiddenfieldsCloseCorner"></div>
         </div>
    {% endif %}
    <ul rel="dc:subject">
        {% for subject in page.tags %}
        <li about="{{ subject|replace({'<': '', '>': ''}) }}">{{ subject }}</li>
        {% endfor %}
    </ul>
    <h1 id="main_title" property="dcterms:title">{{ page.title }}</h1>
    <div property="sioc:content">
        {{ page.content|raw }}
    </div>
</div>
<div class="sidebar">
    {% image output="/images/test.png"
        '@SandboxMainBundle/Resources/public/images/sidebar.png'
    %}
        <img src="{{ asset_url }}" alt="The alt text" />
    {% endimage %}
</div>
{{ parent() }}
{% endblock %}

{% block content_extra %}
<h3 class="offset">Child pages</h3>
{% render "symfony_cmf_navigation.renderer:childlistAction" with { 'url': url } %}
{% endblock %}
