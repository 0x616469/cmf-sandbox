{% extends "SandboxMainBundle::skeleton.html.twig" %}

{% block content %}
<div xmlns:sioc="http://rdfs.org/sioc/ns#" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:dcterms="http://purl.org/dc/terms/"
     typeof="sioc:Post"
     about="{{ page.path }}"
     class="articleContainer">

    <ul rel="dc:subject" property="dc:subject">
        {% for subject in page.tags %}
        <li about="{{ subject|replace({'<': '', '>': ''}) }}"></li>
        {% endfor %}
    </ul>
    <h1 id="main_title" property="dcterms:title">{{ page.title|raw }}</h1>
    <div property="sioc:content">
        {{ page.content|raw }}
    </div>
</div>
{{ parent() }}
{% endblock %}

{% block bottom_scripts %}
    {{ parent() }}
    <script type="text/javascript">
        // TODO: vie_phpcr_path has to be overridden here
        //vie_phpcr_path = '{{ path('liip_vie_phpcr_odm_put_document', {'id': ''}) }}';
    </script>
{% endblock %}
