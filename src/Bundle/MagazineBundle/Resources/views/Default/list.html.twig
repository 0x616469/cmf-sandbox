{% extends "MagazineBundle::layout.html.twig" %}

{% block content %}
<h1>List articles</h1>
<ul>
  {% for article in articles %}
    <li>
      <a href="{{ path('get', {'title': article.getPathWithoutRoot()}) }}">{{ article.path }} ({{ article.title }})</a>
      <a href="{{ path('remove', {'title': article.getPathWithoutRoot()}) }}">Delete</a>
    </li>
  {% endfor %}
</ul>

{% endblock %}